syntax enable
set smartindent
set tabstop=4
set shiftwidth=4
set softtabstop=4
set number
set pastetoggle=<F3>
"set mouse=a

map <F4> :set invnumber<CR>
imap <F4> <C-\><C-O>:set invnumber<CR>

map  <C-A> <Home>
imap <C-A> <Home>

map  <C-E> <End>
imap <C-E> <End>

map <F5> :noh<CR>
imap <F5> <C-\><C-O>:noh<CR>

map  <F2> :w<CR>
imap <F2> <C-\><C-O>:w<CR>

"line wrapping highlight
set colorcolumn=80

start
